@using FoodAir.Models;
@model IEnumerable<SanPham>

@foreach (var item in Model)
{
    
    <div class="col-lg-4 col-md-6 mt-lg-0 mt-5">
        <div class="card border-0 med-blog">
            <div class="card-header p-0">
                <a href="menu.html">
                    <img class="card-img-bottom" src="@Url.Content("~/Content/images/" + item.HinhAnh)" alt="Card image cap">
                </a>
            </div>
            <div class="card-body border border-top-0">
                <h5 class="blog-title card-title m-0"><a href="menu.html">@item.TenSP</a></h5>
                <h6 class="blog-title card-title m-0">@item.DonGia đồng</h6>
                <p class="mt-3">@item.MoTa</p>
                <a href="menu.html" class="button-w3ls mt-4 mb-3">
                    View More
                    <span class="fa fa-caret-right ml-1" aria-hidden="true"></span>
                </a>
            </div>
        </div>
    </div>
}
