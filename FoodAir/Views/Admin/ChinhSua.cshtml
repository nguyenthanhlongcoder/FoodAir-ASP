@using FoodAir.Models;

@{
    ViewBag.Title = "ChinhSua";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

@{var item = ViewBag.SanPham;}
@using (Html.BeginForm("CapNhat", "Admin"))
{
    <div class="form-group">
        <label for="TenSanPham">Tên Sản Phẩm</label>
        <input id="MaSP" name="MaSP" hidden="hidden" value="@item.MaSP"/>
        <input class="form-control" id="TenSanPham" name="TenSanPham" placeholder="Nhập tên sản phẩm" value="@item.TenSP">
    </div>
    <div class="form-group">
        <label for="MoTa">Mô Tả</label>
        <textarea id="MoTa" name="MoTa" rows="4" cols="50" class="form-control" placeholder="Nhập mô tả"  >@item.MoTa</textarea>
    </div>
    <div class="form-group">
        <label for="LoaiSanPham">Loại Sản Phẩm</label>
        @Html.DropDownList("LoaiSP", new SelectList(ViewBag.LoaiSP, "Value", "Text", @item.MaSP), new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="DonGia">Đơn Giá</label>
        <input class="form-control" id="DonGia" name="DonGia" placeholder="Nhập đơn giá" type="number" value="@item.DonGia">
    </div>
    <div class="form-group">
        <label for="HinhAnh">Hình Ảnh</label>
        <input type="file" class="form-control-file" name="HinhAnh" id="HinhAnh" value="@item.HinhAnh">
    </div>

    <input type="submit" class="btn btn-primary" value="Cập Nhật"></input>
}


